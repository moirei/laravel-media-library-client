{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": [ "es2015", "dom" ],
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "strict": true
  },
  "include": ["src", "test/examples"],
}